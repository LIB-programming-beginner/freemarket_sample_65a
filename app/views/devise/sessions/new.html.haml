-# 新規登録
.User-Account-page
  .User-Account-page__content
    .User-contents
      %h2.User-contents__head
        %p.User-contents__head__comment
          アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name), class: 'User-contents__head__create'
      .User-contents__inner
        %button#facebook-login.User-contents__inner__facebook
          = icon('fab','facebook-square')
          Facebookでログイン
        %button#google-login.User-contents__inner__google
          Googleでログイン
          = icon('fab','google')
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .User-field
          .User-field__input
            = f.email_field :email, placeholder: 'メールアドレス', autofocus: true
          .User-field
            .User-field__input
              = f.password_field :password, placeholder: 'パスワード', autocomplete: "off"
          .User-actions
            = f.submit "ログイン", class: 'User-actions__btn'
          .User-pw__missing
            = link_to "パスワードをお忘れの方", '#'
  .User-page-footer
    .User-page-footer__bar
      %li.User-page-footer__bar__privacy
        プライバシーポリシー
      %li.User-page-footer__bar__tos
        利用規約
      %li.User-page-footer__bar__sct
        特定商取引に関する表記
    = link_to root_path do
      = image_tag '/temp/logo-white.png', alt: 'bottom_icon', class: :"User-page-footer__root"
    %p.User-page-footer__logo
      %small
        @FURIMA, inc