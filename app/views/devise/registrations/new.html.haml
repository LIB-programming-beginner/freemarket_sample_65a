-# ログイン画面
.User-Account-page
  .User-Account-page__content
    .User-contents
      %h2.User-contents__head
        会員情報の入力
      = form_for(resource, as: resource_name,  url:registration_path(resource_name)) do |f|
        .User-field
          .User-field__label
            = f.label :name, "ニックネーム"
          %span.User-field__require
            必須
          .User-field__input
            -# = f.text_field :name, placeholder: '例)フリマ太郎', autofocus: true
        .User-field
          .User-field__label
            = f.label :email, "メールアドレス"
          %span.User-field__require
            必須
          .User-field__input
            = f.email_field :email, placeholder: 'PC・携帯どちらでも可'
        .User-field
          .User-field__label
            = f.label :password
          %span.User-field__require
            必須
          .User-field__input
            = f.password_field :password, placeholder: '英数字8文字以上', autocomplete: "off"
        .User-field
          .User-field__label
            = f.label :password_confirmation
          %span.User-field__require
            必須
          .User-field__input
            = f.password_field :password_confirmation, autocomplete: "off"
        .User-actions
          = f.submit "次へ進む", class: 'User-actions__btn'
