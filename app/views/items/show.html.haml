    .detailBoxDescription
      .detailBoxDescription__header Personal Computer
      %table.detailBoxTable
        %tr
          %th.detailBoxTable__th 出品者
          %td.detailBoxTable__td hoge
        %tr
          %th.detailBoxTable__th カテゴリー
          %td.detailBoxTable__td
